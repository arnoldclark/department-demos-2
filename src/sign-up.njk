---
layout: base.njk
---
<div class="ch-container ch-mt--4">
  <h1 class="ch-mb--4">Sign up for a demo</h1>

  <form name="demo-sign-up" action="/thank-you" data-netlify-recaptcha="true" method="post" netlify>
    <div class="ch-form__group">
      <label class="ch-form__control-label" for="demo-department">Department</label>
      <select name="department" id="demo-department" class="ch-form__control sm:ch-width--4" required>
        <option value="">Choose an option</option>
        <option value="Digital">Digital</option>
        <option value="Marketing">Marketing</option>
      </select>
    </div>
    <div class="ch-form__group">
      <label for="demo-name" class="ch-form__control-label">Name</label>
      <input type="text" name="name" class="ch-form__control sm:ch-width--4" id="demo-name" required />
    </div>
    <div class="ch-form__group">
      <label for="demo-team" class="ch-form__control-label">Team</label>
      <input type="text" name="team" class="ch-form__control sm:ch-width--4" id="demo-team" required />
    </div>
    <div class="ch-form__group">
      <label for="demo-topic" class="ch-form__control-label">Topic</label>
      <textarea name="topic" class="ch-form__control sm:ch-width--6" rows="5" id="demo-topic" required></textarea>
    </div>

    <div class="ch-form__group" data-netlify-recaptcha="true"></div>

    <input type="submit" class="ch-btn ch-btn--success" value="Submit demo" />
  </form>
</div>